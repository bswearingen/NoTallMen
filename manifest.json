{
	"manifest_version" : 2,

	"name" : "NoTallMen",
	"description" : "This extension applies the correct capitalization to #notallmen and other variants.",
	"version" : "0.1",

	"permissions" : 
	[
		"tabs", "<all_urls>"
	],

	"content_scripts" : 
	[
		{
			"matches" : 
			[
				"http://*/*",
				"https://*/*"
			],
			"js" : ["content.js"],
			"run_at" : "document_end"
		}
	]
}